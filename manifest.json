{
  "name": "vocIPA",
  "description" : "What is the phonetics of this word?",
  "version": "2024.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "vocIPA",
    "default_icon": {
      "16": "./img/wikinediyo_16.png",
      "128": "./img/wikinediyo_128.png"
    }
  },
  "icons": {
    "16": "./img/wikinediyo_16.png",
    "32": "./img/wikinediyo_32.png",
    "64": "./img/wikinediyo_64.png",
    "128": "./img/wikinediyo_128.png",
    "256": "./img/wikinediyo_256.png",
    "512": "./img/wikinediyo_512.png"
  },
  "background": {
    "service_worker": "./js/eventPage.js"
  },
  "permissions": ["contextMenus", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/content.js"]
    }
  ]
}